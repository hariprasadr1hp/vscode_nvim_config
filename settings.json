//settings.json
{
  //###############################################
  // TELEMETRY   ##################################
  //###############################################
  "code-runner.enableAppInsights": false,
  "gitlens.telemetry.enabled": false,
  "postman.telemetry.enabled": false,
  "jupyter.experiments.enabled": false,
  "jupyter.experiments.optInto": [],
  "jupyter.experiments.optOutFrom": [],
  "python.analysis.reportExtraTelemetry": false,
  "python.experiments.enabled": false,
  "python.experiments.optInto": [],
  "python.experiments.optOutFrom": [],
  "redhat.telemetry.enabled": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "telemetry.telemetryLevel": "off",
  //###############################################
  // SECURITY/PRIVACY   ###########################
  //###############################################
  "github-actions.use-enterprise": false,
  "gitlens.ai.experimental.generateCommitMessage.enabled": false,
  "gitlens.cloudIntegrations.enabled": false,
  "gitlens.integrations.enabled": false,
  "gitlens.liveshare.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  //###############################################
  // GUI CONFIG   #################################
  //###############################################
  "editor.fontSize": 16,
  "editor.rulers": [
    74
  ],
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "solid",
  // "editor.formatOnPaste": true,
  // "editor.formatOnSave": true,
  // "editor.formatOnType": true,
  "editor.inlayHints.enabled": "off",
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "all",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true,
  },
  "editor.semanticHighlighting.enabled": true,
  "editor.stickyScroll.enabled": false,
  "files.associations": {
    "*.sql": "jinja-sql",
    "*.yml": "jinja-yaml"
  },
  "window.commandCenter": "never",
  "window.customTitleBarVisibility": "never",
  "window.nativeFullScreen": false,
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.settings.editor": "json",
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": true,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": true,
  "zenMode.showTabs": "none",
  "zenMode.silentNotifications": false,
  //###############################################
  // TERMINAL   ###################################
  //###############################################
  "terminal.explorerKind": "external",
  "terminal.integrated.allowedLinkSchemes": [
    "docker-desktop",
    "file",
    "http",
    "https",
    "mailto",
    "vscode",
    "vscode-insiders",
  ],
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.inheritEnv": false,
  //###############################################
  // NEOVIM   #####################################
  //###############################################
  "vscode-neovim.neovimInitVimPaths.linux": "/home/hari/.config/User/nvim/init.vim",
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "/Users/hari/Library/Application Support/Code/User/nvim/init.vim",
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.logOutputToConsole": true,
  //###############################################
  // KUBERNETES ###################################
  //###############################################
  "vs-kubernetes": {
    "vscode-kubernetes.minikube-path.mac": "/Users/hari/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
    "vscode-kubernetes.helm-path.mac": "/Users/hari/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.helm-path-mac": "/Users/hari/.vs-kubernetes/tools/helm/darwin-arm64/helm"
  },
  //###############################################
  // CODING ENVIRONMENT   #########################
  //###############################################
  "code-runner.clearPreviousOutput": true,
  "code-runner.enableAppInsights": false,
  "code-runner.showExecutionMessage": false,
  //############### CMAKE #########################
  "cmake.showOptionsMovedNotification": false,
  //################ CPP ##########################
  "[cpp]": {
    "editor.tabSize": 4,
    "editor.wordBasedSuggestions": "off"
  },
  //############### HTML ########################
  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  //############### HTTP ##########################
  "http.proxySupport": "off",
  //############## JAVASCRIPT #####################
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  //################ JSON #########################
  "[json]": {
    // "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.tabSize": 2
    "editor.defaultFormatter": "denoland.vscode-deno",
  },
  //############### JSONC #########################
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  //############### JUPYTER #######################
  "notebook.defaultFormatter": "ms-python.black-formatter",
  // "notebook.lineNumbers": "on",
  "notebook.output.textLineLimit": 100,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  //############### LATEX #########################
  "latex-workshop.view.pdf.viewer": "tab",
  //############### MAGIT #########################
  "[magit]": {
    "editor.lineNumbers": "on",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none"
  },
  //############## MARKDOWN #######################
  "[markdown]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": false,
  },
  //############### PYTHON ########################
  "code-runner.executorMap": {
    "python": "$pythonPath -u $fullFileName"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4,
  },
  //############### RUST ##########################
  // "rust-analyzer.check.command": "check",
  "[rust]": {
    "editor.tabSize": 4,
    "editor.wordBasedSuggestions": "off"
  },
  //############### SQL ########################
  "[sql]": {
    "editor.tabSize": 2,
  },
  //################ SVG ##########################
  "svg.preview.mode": "svg",
  //############## TYPESCRIPT #####################
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.typescript-language-features",
  },
  //############### SCSS ##########################
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  //############### VITE ##########################
  "vite.autoStart": false,
  "oxc_language_server.enable": true,
  //############### VUE ###########################
  "[vue]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "Vue.volar"
  },
  //############### YAML ##########################
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "redhat.vscode-yaml",
  },
  "yaml.schemas": {
    "file:///Users/hari/.vscode/extensions/atlassian.atlascode-2.10.11/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml",
  },
  "[jinja-yaml]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "yaml.completion": true,
  "yaml.extension.recommendations": "true",
  "yaml.format.singleQuote": false,
  "yaml.hover": true,
  "yaml.schemaStore.enable": true,
  "yaml.schemaStore.url": "https://www.schemastore.org/api/json/catalog.json",
}